# ============================================
# AutoWebIQ Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# Database URLs
MONGO_URL="mongodb://localhost:27017"
DB_NAME="autowebiq_db"
CORS_ORIGINS="*"

# PostgreSQL Configuration
DATABASE_URL="postgresql+asyncpg://user:password@localhost/autowebiq_db"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# AI API Keys (Get from respective providers)
EMERGENT_LLM_KEY=your_emergent_llm_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Authentication
JWT_SECRET=your_jwt_secret_key_here

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://yourdomain.com/auth/github/callback

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GCP_PROJECT_ID=your_project_id

# Docker Hub
DOCKER_HUB_USERNAME=your_docker_username
DOCKER_HUB_TOKEN=your_docker_token
DOCKER_HUB_EMAIL=your_email@example.com

# GKE (Google Kubernetes Engine)
GKE_CLUSTER_NAME=your_cluster_name
GKE_CLUSTER_REGION=your_region
DOCKER_REPO=your_username/your_repo:latest

# Domain Configuration
DOMAIN=yourdomain.com
PREVIEW_HOST=preview.yourdomain.com

# Cloudflare
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_API_TOKEN=your_api_token

# AWS S3 + CloudFront Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id
CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token

# GitHub Configuration
GITHUB_PAT=your_github_personal_access_token
