# IMPORTANT: This is a template. Create actual secrets.yaml from your .env
# Run: kubectl create secret generic autowebiq-secrets --from-env-file=../.env -n autowebiq

apiVersion: v1
kind: Secret
metadata:
  name: autowebiq-secrets
  namespace: autowebiq
type: Opaque
stringData:
  # AI API Keys
  OPENAI_API_KEY: "your-openai-key"
  ANTHROPIC_API_KEY: "your-anthropic-key"
  GOOGLE_AI_API_KEY: "your-google-key"
  EMERGENT_LLM_KEY: "your-emergent-key"
  
  # Authentication
  JWT_SECRET: "your-jwt-secret"
  
  # Payment
  RAZORPAY_KEY_ID: "your-razorpay-id"
  RAZORPAY_KEY_SECRET: "your-razorpay-secret"
  
  # GitHub
  GITHUB_CLIENT_ID: "your-github-id"
  GITHUB_CLIENT_SECRET: "your-github-secret"
  GITHUB_PAT: "your-github-pat"
  
  # Cloudinary
  CLOUDINARY_CLOUD_NAME: "your-cloud-name"
  CLOUDINARY_API_KEY: "your-api-key"
  CLOUDINARY_API_SECRET: "your-api-secret"
  CLOUDINARY_URL: "your-cloudinary-url"
  
  # AWS
  AWS_ACCESS_KEY_ID: "your-aws-key"
  AWS_SECRET_ACCESS_KEY: "your-aws-secret"
  S3_BUCKET_NAME: "your-bucket"
  
  # Vercel
  VERCEL_TOKEN: "your-vercel-token"
  
  # Cloudflare
  CLOUDFLARE_ZONE_ID: "your-zone-id"
  CLOUDFLARE_API_TOKEN: "your-cf-token"
  
  # Docker Hub
  DOCKER_HUB_USERNAME: "your-docker-username"
  DOCKER_HUB_TOKEN: "your-docker-token"